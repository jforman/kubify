[Unit]
Description=containerd container runtime
Documentation=https://containerd.io
After=network.target kubelet.service
Requires=kubelet.service

[Service]
ExecStartPre=/sbin/modprobe overlay
ExecStart=/bin/containerd --config {{INSTALL_DIR}}/conf/config.toml
Restart=always
RestartSec=5
Delegate=yes
KillMode=process
OOMScoreAdjust=-999
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity

[Install]
WantedBy=multi-user.target
